<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="650" prefWidth="900" style="-fx-background-color: #1d2537;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.kakusz.fx.controllers.DashBoardController">

    <left>
        <VBox fx:id="sideMenu" prefWidth="250" spacing="10" style="-fx-background-color: #1a2235; -fx-padding: 20;">
           <ImageView fx:id="logoImage" fitHeight="56.0" fitWidth="82.0" preserveRatio="true" style="-fx-padding: 10; -fx-background-color: red;" />

            <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="SpeedSpeak" />
            <Button style="-fx-text-fill: white; -fx-background-color: #2e3b54; -fx-background-radius: 5;" text="Strona główna" />
            <Button style="-fx-text-fill: white; -fx-background-color: #2e3b54; -fx-background-radius: 5;" text="Pomoc techniczna" />
            <Label style="-fx-text-fill: gray; -fx-font-size: 12px;" text="Profil" />
            <Button style="-fx-text-fill: white; -fx-background-color: #2e3b54; -fx-background-radius: 5;" text="Moje kursy" />
            <Button style="-fx-text-fill: white; -fx-background-color: #2e3b54; -fx-background-radius: 5;" text="Ustawienia" />
            <Label style="-fx-text-fill: gray; -fx-font-size: 12px;" text="Aplikacja" />
            <Button fx:id="logoutButton" onMouseClicked="#handleLogout" style="-fx-text-fill: white; -fx-background-color: #2e3b54; -fx-background-radius: 5;" text="Wyloguj się" />
            <Button style="-fx-text-fill: white; -fx-background-color: #2e3b54; -fx-background-radius: 5;" text="Wyjdź" />
        </VBox>
    </left>


    <center>
        <VBox fx:id="mainContainer" alignment="CENTER" spacing="20" style="-fx-padding: 20;">

            <HBox alignment="CENTER_LEFT" spacing="15">
                <ImageView fx:id="userAvatar" fitHeight="100" fitWidth="100" preserveRatio="true" />
                <VBox>
                    <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="kakuserina" />
                    <Label style="-fx-text-fill: gray;" text="ID Konta: 11" />
                    <Label style="-fx-text-fill: gray;" text="Stan konta: 0.43€  " />
                </VBox>
            </HBox>


            <HBox alignment="CENTER" spacing="20">
                <Button style="-fx-background-color: #3273dc; -fx-text-fill: white; -fx-background-radius: 5;" text="Moje kursy" />
                <Button style="-fx-background-color: #3273dc; -fx-text-fill: white; -fx-background-radius: 5;" text="Kup kurs" />
            </HBox>


            <HBox alignment="CENTER" spacing="20">
                <VBox alignment="CENTER" prefWidth="150" spacing="10" style="-fx-background-color: #2e3b54; -fx-padding: 20; -fx-background-radius: 5;">
                    <Label alignment="CENTER" prefHeight="17.0" prefWidth="70.0" style="-fx-text-fill: gray;" text="Ilość kursów" />
                    <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="0" />
                </VBox>
                <VBox alignment="CENTER" prefWidth="150" spacing="10" style="-fx-background-color: #2e3b54; -fx-padding: 20; -fx-background-radius: 5;">
                    <Label style="-fx-text-fill: gray;" text="Koszt miesięczny" />
                    <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="0.00€" />
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
