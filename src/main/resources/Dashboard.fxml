<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="650" prefWidth="900" style="-fx-background-color: #1d2537;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.kakusz.fx.controllers.DashBoardController">

    <left>
        <VBox fx:id="sideMenu" prefWidth="250" spacing="10" style="-fx-background-color: #1a2235; -fx-padding: 20;">
           <ImageView fx:id="logoImage" fitHeight="56.0" fitWidth="82.0" preserveRatio="true" style="-fx-padding: 10; -fx-background-color: red;" />

            <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="SpeedSpeak" />
            <Button style="-fx-text-fill: white; -fx-background-color: #2e3b54; -fx-background-radius: 5;" text="Strona główna" />
            <Label style="-fx-text-fill: gray; -fx-font-size: 12px;" text="Profil" />
            <Button style="-fx-text-fill: white; -fx-background-color: #2e3b54; -fx-background-radius: 5;" text="Moje kursy" />
            <Button style="-fx-text-fill: white; -fx-background-color: #2e3b54; -fx-background-radius: 5;" text="Kup kurs" />
            <Button style="-fx-text-fill: white; -fx-background-color: #2e3b54; -fx-background-radius: 5;" text="Transakcje" />
            <Label style="-fx-text-fill: gray; -fx-font-size: 12px;" text="Aplikacja" />
            <Button fx:id="logoutButton" onMouseClicked="#handleLogout" style="-fx-text-fill: white; -fx-background-color: #2e3b54; -fx-background-radius: 5;" text="Wyloguj się" />
        </VBox>
    </left>


    <center>
        <VBox fx:id="mainContainer" alignment="CENTER" spacing="20" style="-fx-padding: 20;">

            <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="601.0" spacing="15">
               
                <VBox>
                    <Label fx:id="usernameLabel" style="-fx-text-fill: white; -fx-font-size: 18px;" />
                    <Label fx:id="idKontaLabel" style="-fx-text-fill: gray;" />
                </VBox>
            <VBox.margin>
               <Insets left="40.0" />
            </VBox.margin>
            </HBox>


            <HBox alignment="CENTER" spacing="20">
                <Button prefHeight="64.0" prefWidth="252.0" style="-fx-background-color: #3273dc; -fx-text-fill: white; -fx-background-radius: 5;" text="Moje kursy" />
                <Button prefHeight="64.0" prefWidth="252.0" style="-fx-background-color: #3273dc; -fx-text-fill: white; -fx-background-radius: 5;" text="Kup kurs" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
