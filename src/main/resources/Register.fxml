<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="650" prefWidth="500" style="-fx-background-color: #1d2537;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.kakusz.fx.controllers.RegisterController">

    <center>
        <VBox fx:id="mainContainer" alignment="CENTER" layoutX="50" layoutY="50" spacing="15">

            <ImageView fx:id="logoImage" fitHeight="180.0" fitWidth="180.0" preserveRatio="true" style="-fx-padding: 10; -fx-background-color: red;" />


            <Label style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" text="Rejestracja" />


            <VBox fx:id="formContainer" alignment="CENTER" maxWidth="300" spacing="10">
                <TextField fx:id="usernameField" promptText="Nazwa użytkownika" style="-fx-background-radius: 5; -fx-background-color: #2e3b54; -fx-text-fill: white;" />
                <TextField fx:id="emailField" promptText="Adres E-Mail" style="-fx-background-radius: 5; -fx-background-color: #2e3b54; -fx-text-fill: white;" />
                <PasswordField fx:id="passwordField" promptText="Hasło" style="-fx-background-radius: 5; -fx-background-color: #2e3b54; -fx-text-fill: white;" />
                <PasswordField fx:id="repeatPasswordField" promptText="Powtórz hasło" style="-fx-background-radius: 5; -fx-background-color: #2e3b54; -fx-text-fill: white;" />


            </VBox>

            <HBox alignment="CENTER" spacing="5">
                <CheckBox fx:id="termsCheckBox" style="-fx-text-fill: white; -fx-wrap-text: true; -fx-font-size: 12px;" />
                <Label style="-fx-text-fill: white; -fx-font-size: 12px;" text="Przeczytałem i akceptuję ogólne warunki handlowe oraz" />
                <Hyperlink fx:id="privacyPolicyLink" onAction="#handlePrivacyPolicyClick" style="-fx-text-fill: #3273dc; -fx-font-size: 12px;" text="politykę prywatności">
               <padding>
                  <Insets left="-3.0" />
               </padding></Hyperlink>
            </HBox>


            <Button fx:id="registerButton" maxWidth="200" onAction="#handleRegister" style="-fx-background-color: #3273dc; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Utwórz konto" />

            <Button fx:id="backToLoginButton" maxWidth="200" onAction="#handleBackToLogin" style="-fx-background-color: #2e3b54; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 5;" text="Powrót do logowania" />

        </VBox>
    </center>
</BorderPane>
