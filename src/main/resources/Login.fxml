<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:controller="pl.kakusz.fx.controllers.LoginController" xmlns:fx="http://javafx.com/fxml" prefHeight="650" prefWidth="500" style="-fx-background-color: #1d2537;">
   <!-- Główna zawartość -->
   <center>
      <VBox fx:id="mainContainer" alignment="CENTER" spacing="20">
         <!-- Dodanie obrazu logo -->
         <ImageView fx:id="logoImage" fitHeight="180.0" fitWidth="180.0" preserveRatio="true" style="-fx-padding: 10; -fx-background-color: red;" />


         <!-- Tytuł aplikacji -->
         <Label text="Logowanie" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />

         <!-- Pola logowania -->
         <VBox fx:id="formContainer" alignment="CENTER" spacing="15" maxWidth="300">
            <TextField fx:id="emailField" promptText="Adres E-Mail" style="-fx-background-radius: 5; -fx-background-color: #2e3b54; -fx-text-fill: white;" />
            <PasswordField fx:id="passwordField" promptText="Hasło" style="-fx-background-radius: 5; -fx-background-color: #2e3b54; -fx-text-fill: white;" />
         </VBox>

         <!-- Przycisk logowania -->
         <Button fx:id="mainButton" onAction="#handleLogin" text="Zaloguj się" style="-fx-background-color: #3273dc; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" maxWidth="200" />

         <!-- Opcje dodatkowe -->
         <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
            <Button onAction="#handleRegisterButtonClick" fx:id="registerButton" text="🧍‍♂️ Zarejestruj się" style="-fx-background-color: #2e3b54; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 5;" />
            <Button fx:id="forgotPasswordButton" onAction="#handleResetPasswordButtonClick" text="🔒 Reset hasła" style="-fx-background-color: #2e3b54; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 5;" />
         </HBox>
      </VBox>
   </center>
</BorderPane>
